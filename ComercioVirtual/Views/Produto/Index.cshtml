
@{
    ViewBag.Title = "Index";
    List<ComercioVirtual.Models.Produto> produtos =
        ViewBag.ListaDeProdutos;
        
}

<div style="text-align:center; width: 100%">
    <h2 style="margin-top:30px;margin-bottom:30px">Listagem de Produtos</h2>
    <table class="table table-striped table-hover" style="width:70%; margin: 0 auto">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Categoria</th>
                <th>Imagem</th>
                <th>Editar</th>
                <th>Remover</th>
            </tr>
        </thead>
        <tbody style="text-align: left">
            @foreach (var item in produtos)
            {
                <tr>
                    <td>@Html.Label(item.ProdutoId.ToString())</td>
                    <td>@Html.Label(item.Nome)</td>
                    <td>@Html.Label(item.Quantidade.ToString())</td>
                    <td>@Html.Label(item.Preco.ToString("C2"))</td>
                    <td>@Html.Label(item.Categoria.Nome)</td>
                    <td><img src="~/Images/@item.CaminhoImagem" style="width:50px;height:50px"/></td>
                    <td>
                        @Html.ActionLink("Editar",
               "EditarProduto",
               new { id = item.ProdutoId }, new { @class="btn btn-warning" })
                    </td>
                    <td>
                        @Html.ActionLink("Remover",
               "RemoverProduto",
            new { id = item.ProdutoId }, new { @class = "btn btn-danger" })
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div style="margin-top:30px;margin-bottom:30px">
        @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", null, new { @class = "btn btn-success" })
    </div>
</div>
