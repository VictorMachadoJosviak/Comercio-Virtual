@{
    ViewBag.Title = "CadastrarProduto";
}

@using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { enctype="multipart/form-data"}))
{
    <div class="form-horizontal">
        <fieldset>

            <legend style="margin-left:30px">Cadastrar Produto</legend>

            <div class="form-group">
                @Html.Label("Nome", null, new { @class = "col-sm-2 control-label" })
                <div class="form-inline">
                    @Html.TextBox("txtNome", null, new { @class = "form-control", @style = "width:30%" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Quantidade", null, new { @class = "col-sm-2 control-label" })
                <div class="form-inline">
                    @Html.TextBox("txtQuantidade", null, new { @class = "form-control", @style = "width:30%" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Preço", null, new { @class = "col-sm-2 control-label" })
                <div class="form-inline">
                    @Html.TextBox("txtPreco", null, new { @class = "form-control", @style = "width:30%" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Categoria", null, new { @class = "col-sm-2 control-label" })
                <div class="form-inline">
                    @Html.DropDownList("CategoriaId", " --- Selecione ---")
                </div>
            </div>   

            <div class="form-group">
                @Html.Label("Imagem", null, new { @class = "col-sm-2 control-label" })
                <div class="form-inline">
                    <input type="file" name="fileImagem" id="fileImagem" />
                </div>
            </div>          

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Cadastrar Produto" 
                           class="btn btn-primary" />
                </div>
            </div>
        </fieldset>
    </div>
}
