@model IEnumerable<ComercioVirtual.Models.ItemCompra>

@{
    ViewBag.Title = "CarrinhoDeCompras";
}

<h2 style="margin-bottom:30px">Carrinho de Compras</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Preco)
        </th>
        <th>
            @Html.DisplayName("Subtotal")
        </th>
        <th>
            @Html.DisplayName("Remover")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:left">
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @item.Produto.Preco.ToString("C2")
            </td>
            <td>
                @String.Format("{0:c}", (item.Produto.Preco * item.Quantidade))
            </td>
            <td>
                @Html.ActionLink("Remover", "RemoverDoCarrinho", new { id = item.ItemCompraId})
            </td>
        </tr>
    }

</table>

<div class="panel panel-success" style="width:20%">
    <div class="panel-heading">
        <h3 class="panel-title">Total: @ViewBag.Total</h3>
    </div>
</div>
<div style="width:20%">    
    @Html.ActionLink("Finalizar Compra", "CarrinhoDeCompras", null, new { @class = "btn btn-danger" , @style="width:100%" })
</div>
